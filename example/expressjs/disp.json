{
	"arch": "server",
	"impl": "expressjs",
	"config": {
		"port": 7000
	},
	"databases": {
		"main": {
			"mongodb": {
				
			}
		}
	},
	"routers": {
		"/": {
			"staticSite": {"path": "../angularjs"}
		},
		"/api": {
			"newRouter": [
				{
					"use": {
						"midware": [{"print": {"val": "mid"}},{"nextMidware": 1}]
					}
				},
				{
					"Lroute": {
						"/error": {
							"get": {
								"midware": {
										"send": {
												"val": {
														"error": {"code": 10, "message": "haha"}
												}
										}
								}
							}
						},
						"/success": {
							"get": {
								"midware": {
										"send": {
												"val": {
														"payload": {"abc":1,"abd":[]}
												}
										}
								}
							}
						},
						"/insert": {
							"get": {
								"midware": {"dbop": {
									"schema": "test",
									"method": "insert",
									"arg1": {"reqQuery": 1}
								}}
							}
						}						
					}
				}
			]
		}
	}
}
