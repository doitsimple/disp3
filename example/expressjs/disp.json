{
	"arch": "server",
	"impl": "expressjs",
	"plugins": {
		"mocha": 1
	},
	"config": {
		"port": 7000
	},
	"databases": {
		"main": {
			"mongodb": {
				
			},
			"schemas": {}
		}
	},
	"routers": {
		"/": {
			"use": {
				"staticSite": {"val": "../angularjs"}
			}
		},
		"/api": {
			"before": {
				"use": {
					"midware": [{"print": {"val": "mid"}},{"nextMidware": 1}]
				}
			},
			"routers": {
				"/error": {
					"get": {
						"midware": {
							"send": {
								"val": {
									"error": {"code": 10, "message": "haha"}
								}
							}
						}
					},
					"tests": {
						"result": {							
						}
					}
				},
				"/success": {
					"get": {
						"midware": {
							"send": {
								"val": {
									"payload": {"abc":1,"abd":[]}
								}
							}
						}
					}
				},
				"/insert": {
					"get": {
						"midware": {"dbop": {
							"schema": "test",
							"method": "insert",
							"arg1": {"reqQuery": 1}
						}}
					}
				}						
			}
		}
	}
}
