/*
db.insert
db.select
db.update
db.delete
*/
function Database(methods){
	var self = this;
	var db;
	var internalMethods = {
		select: function(name, where, fn){
			getOp("selectx")(name, {$match: where, $limit:1}, fn);
		},
		selects: function(name, where, fn){
			getOp("selectx")(name, {$match: where}, fn);
		}
	}
	function _getOp(op){
		if(methods[op]) return methods[op];
		else return internalMethods[op];
	}
	function getOp(op){
		if(!db)
			return function(){
				var arg = arguments;
				var lastarg = arguments[arguments.length - 1];
				methods.connect(function(err, _db){
					if(err){
						if(typeof lastarg == "function") lastarg(err);
						return;
					}
					db = _db;
					_getOp(op).apply(self, arg);
				});
			}
		else
			return _getOp(op);
	}
	var opList = {
		insert: 2,
		select: 3,
		update: 3,
		delete: 3,
		aggr: 1,
		count: 1,
		get: 1,
		set: 1,
		expire: 1
	};
	for(var key in opList){
		self[key] = getOp(key);
		if(opList[key] > 1)
			self[key+"s"] = getOp(key+"s");
		if(opList[key] > 2)
			self[key+"x"] = getOp(key+"x");
	}
}
