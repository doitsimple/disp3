/* CSS Tree-Edit menu styles */
.tree-edit
{
	padding: 0 0 0 30px;
}
.tree-edit	li 
{ 
	position: relative; 
	margin-left: -1em;
	list-style: none;
}
.tree-edit	li.leaf a
{
	color: black;
	padding-left: 1em;
	text-decoration: none;
	display: inline-block;
}
.tree-edit	li label
{
	cursor: pointer;
	display: inline-block;	
	padding-left: 1em;
	padding-right: 1em;
	width: 3em;
	overflow: hidden;
	margin: 0;
	font-weight: normal;
  font-size: 14px;
  font-weight: 400;
  line-height: 1.42857143;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-image: none;
	border: 1px solid transparent;
	border-radius: 4px;

}
.tree-edit	li.leaf > input
{
	margin-left:0.5em;
	padding-left:0.1em;
	text-align:left;
	border:none;
//	width:8em;
}
.tree-edit	li.branch > input
{
	position: absolute;
	left: 0;
	margin: 0;
	opacity: 0;
	z-index: 2;
	cursor: pointer;
	top: 0;
}
.tree-edit	li.branch > input + ol > li { 
	display: none; 
//	margin-left: -1em !important; 
}
.tree-edit li.branch > input:checked + ol
{
	margin: -1.5em 0 0 -3em; 
	padding: 1.5em 0 0 5em;
	height: auto;
}
.tree-edit	li.branch > input:checked + ol > li { 
	display: block; 
//	margin: 0 0 0.125em;  /* 2px */
}
.tree-edit li.branch > input:checked + ol > li:last-child { 
//	margin: 0 0 0.063em; /* 1px */ 
}

.tree-edit li label {
	color: #333;
	background-color: #fff;
	border-color: #ccc;
}
