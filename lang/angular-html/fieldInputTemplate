	<a class="btn btn-primary btn-xs" ng-click="">上传</a>
	<input class="form-control" ng-model="^^=val$$">
	 ^^=~fieldTemplate: argv, model: model, val: val$$

^^}else if(type == "id"){$$
	<input class="form-control" ng-model="^^=val$$" disabled>

^^}else if(type == "text"){$$
	<textarea class="form-control" ng-model="^^=val$$" style="width: auto;height:auto"></textarea>

^^}else if(type == "password"){$$
